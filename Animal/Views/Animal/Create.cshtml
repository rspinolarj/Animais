@model Animal.Models.Animal

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Animal</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            @Html.LabelFor(model => model.Esp_idEspecie, "Espécie", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Esp_idEspecie", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Esp_idEspecie, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sex_idSexo, "Sexo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("sex_idSexo", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.sex_idSexo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StA_idStatusAnimal, "Status do Animal", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("StA_idStatusAnimal", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StA_idStatusAnimal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tipo de Identificação</label>
            <div class="col-md-10">
                *** dropdown tipo identificador
                @*Html.DropDownList("TpI_idTipoIdentificador", null, htmlAttributes: new { @class = "form-control" })*@
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Código Identificador</label>
            <div class="col-md-10">
                @Html.TextBox("codigoIdentificador",null, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
